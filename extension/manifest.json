{
  "manifest_version": 2,

  "name": "Lingua",
  "description" : "Breaking the Language Barrier",
  "version": "1.0",
  "author": "French Toast Mafia",

  "icons": {
    "48": "logo.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },


  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      //"css": ["mystyles.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],

  "permissions": [
    "<all_urls>",
    "tabs"
  ]
}